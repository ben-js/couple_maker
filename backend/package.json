{
  "name": "date-sense-backend",
  "version": "1.0.0",
  "description": "Date Sense Backend API - AWS Serverless + Express",
  "main": "local-server.js",
  "scripts": {
    "dev": "nodemon local-server.js",
    "start": "node local-server.js",
    "start:dev": "NODE_ENV=development node local-server.js",
    "start:staging": "NODE_ENV=staging node local-server.js",
    "start:prod": "NODE_ENV=production node local-server.js",
    "build": "sam build",
    "deploy:dev": "sam build && sam deploy --config-env dev",
    "deploy:staging": "sam build && sam deploy --config-env staging",
    "deploy:prod": "sam build && sam deploy --config-env prod",
    "deploy:guided": "sam build && sam deploy --guided",
    "local": "sam local start-api",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "create-email-index": "node scripts/create-email-index.js",
    "create-tables": "node scripts/create-tables.js",
    "recreate-tables": "node scripts/create-tables.js",
    "create-test-data": "node scripts/create-test-data.js",
    "delete-test-data": "node scripts/delete-test-data.js",
    "setup": "cp env.example .env && npm install"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/node": "^20.0.0",
    "aws-cdk": "^2.150.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.844.0",
    "@aws-sdk/client-dynamodb": "^3.844.0",
    "@aws-sdk/client-s3": "^3.844.0",
    "@aws-sdk/lib-dynamodb": "^3.844.0",
    "@aws-sdk/s3-request-presigner": "^3.844.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "uuid": "^11.1.0"
  }
}
